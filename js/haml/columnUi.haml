%table{class:'columnUi'}
  %tbody

    %tr
      %td{colspan:2}
        %div{class:'moveHandle hoverShow recede'}
          %span{class:'ui-icon ui-icon-arrowthick-2-e-w', title:'Move column'}
        %span{class:'more hoverShow recede menu', title:'More...'}
          %img{src:menuImg, alt:''}

    %tr
      %td{class:'fullWidth', colspan:2}
        %input{class:'columnTitle hoverChange recede', type:'text'}

    %tr{class:'fieldRow'}
      %td{class:'fullWidth', colspan:2}
        %input{class:'field hoverChange recede', type:'text'}

    %tr{class:'headerPlotRow'}
      %td{class:'headerSidebar sidebar'}
      %td{class:'headerPlot plot'}

    %tr
      %td{class:'sparsePad'}

    %tr
      %td{class:'sampleSidebar sidebar'}
      %td{class:'samplePlot plot'}

    %tr{class:'colorBarLabelRow'}
      %td{class:'fullWidth', colspan:2}
        %input{class:'colorBarLabel', type:'text', readonly:true}
	  
    %tr
      %td{class:'colorBarEllipsis', style:'text-align:center', colspan:2}

    %tr{style:'display:none'}
      %td{colspan:2} =debugId
