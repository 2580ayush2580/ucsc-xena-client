%table{class:'columnUi'}

  %tr
    %td{colspan:2}
      %div{class:'moveHandle hoverShow recede'}
      %span{class:'more hoverShow recede menu ui-icon ui-icon-triangle-1-s', title:'More...'}

  %tr
    %td{colspan:2}
      %input{class:'columnTitle recede', type:'text'}

  %tr{class:'fieldRow'}
    %td{colspan:2}
      %input{class:'field recede', type:'text'}

  %tr{class:'headerPlotRow'}
    %td{class:'headerSidebar sidebar'}
    %td{class:'headerPlot plot'}

  %tr
    %td{class:'sparsePad'}

  %tr
    %td{class:'sampleSidebar sidebar'}
    %td{class:'samplePlot plot',}

  %tr{class:'legendRow', style:'display:none'}
    %td{class:'legend', style:'text-align:center'}
      %img{src:legendImg, alt:'', width:130}

  %tr{style:'display:none'}
    %td{colspan:2} =debugId
